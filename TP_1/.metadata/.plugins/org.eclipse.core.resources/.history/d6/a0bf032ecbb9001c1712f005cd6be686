
#ifndef BIBLIOTECATP1_H_
#define BIBLIOTECATP1_H_

// Definición de las funciones

double pesosABitcoin(float pesosArg, float valorDelBitcoinActual);
/// @brief Calcula el equivalente de PESOS ARGENTINOS a Bitcoin
/// @param pesosArg = la cantidad de precio argentinos para pasar a bitcoin
/// @param valorDelBitcoinActual = el valor que tenga el bitcoin en el momento de hacer el pasaje de precio
/// @return double = porque el numero puede llegar a ser muy largo decimalmente hablando

float calcularUnitario(float precio, float km);
/// @brief Calcula eel valor unitario, es decir divide el total por una cantidad específica
/// @param precio = es el precio total ingresado por teclado
/// @param km = el total de km recorridos ingresado por teclado
/// @return float = ya que al aplicar descuento el resutlado es un float

float calcularDiferencia(float numero1, float numero2);
/// @brief Calcula la diferencia entre 2 numeros (es indiferente el orden de la resta, siempre va a dar un valor positivo)
/// @param numero1 = numero al que se le va a restar el numero2
/// @param numero2 = numero que se le resta al numero1
/// @return float = ya que al dividir y multiplicar, el resultado es de tipo float

int mostrarCalculos(float x, float y, float z, float a_Aero, float a_Latam, float b_Aero, float b_Latam, double c_Aero, double c_Latam, float d_Aero, float d_Latam, float dif);

#endif /* BIBLIOTECATP1_H_ */
